  GNU nano 4.8                                             /usr/local/bin/stop_1tb                                                       
#!/bin/bash

CHECK_MOUNT="$(df -h|grep hdd_1tb)"

if [ -h /dev/disk/by-uuid/45DF5E6FEC9CB32A ] && [ -d /mnt/hdd_1tb/movie ] && [ -n CHECK_MOUNT ] 
then
#  echo $CHECK_MOUNT
  DISK="$(echo $CHECK_MOUNT|awk ' {print $1} ')"
  hdparm -S 1 $DISK
#  echo $DISK
fi

#hdparm -S 1 /dev/sdc
#45DF5E6FEC9CB32A
